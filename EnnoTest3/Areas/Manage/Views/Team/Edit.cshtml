@model Team

@{
    ViewData["Title"] = "Create";
}

<h1>Edit</h1>

<h4>Team</h4>
<hr />
<div class="container">
    <div class="row">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-lg-6">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6 ">
                    <label asp-for="Desc" class="control-label"></label>
                    <input asp-for="Desc" class="form-control" />
                    <span asp-validation-for="Desc" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="Level" class="control-label"></label>
                    <input asp-for="Level" class="form-control" />
                    <span asp-validation-for="Level" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="ImageFile" class="control-label"></label>
                    <input asp-for="ImageFile" class="form-control" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
                @if (Model.Image != null)
                {
                    <div class="col-lg-6">
                        <input type="hidden" name="Image" value="@Model.Image" />

                        <img src="~/uploads/teams/@Model.Image" width="200" height="150" />
                    </div>
                }


            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Edit</button>
                <a class="btn btn-primary" asp-action="index" asp-controller="team">Back to List</a>
            </div>
        </form>
    </div>

</div>


@section Scripts{
    @Html.PartialAsync("_ValidationScriptsPartial")
}